<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
	<class name="com.mphasis.model.Student" table="student_table">
	
		<id name="studId" column="sid">
			<generator class="increment"></generator>
		</id>
		<property name="studName" column="sname"></property>
		<property name="course" column="course"></property>
		<property name="mobile" column="phonenum"></property>
		<property name="email" column="email"></property>
	</class>
</hibernate-mapping>